<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registration</title>
    <link rel="stylesheet" href="Style.css">
  </head>
  <body>
    <%-include("header")  -%> 
    <div class="main_RegistrationPage">
      <div class="Registration_wrapper">
        <h1>Registration Form</h1>
        <div class="FormBox">
          <div class="left_Container">
            <img src="Image/logo1.png" alt="" height="150px">
            <h2>Lorem ipsum, dolor sit amet consectetur adipi deleniti.</h2>
          </div>
          <div class="right_container">
            <form action="/register" method="POST">
              <div class="form1">
                <p>First Name <br>  <input type="text" name="firstname" /></p>
               
                <p>Last Name  <br> <input type="text" name="lastname" /></p>
               
              </div>
              <div class="form1">
                <div class="genderBox">
                  <p>Gender</p>
                  <input type="radio" name="gender" value="Male"/> <label> Male</label>
                  <input type="radio" name="gender" value="Female"/> <label> Female</label>
                  <input type="radio" name="gender" value="Other" /> <label> Other</label>
                </div>
                <p>Referal <br> <input type="number" name="referal" id=""></p>
              </div>
              <div class="form1">
                <p>Phone  <br> <input type="number" name="phone" /></p>
               
                <p>Email  <br><input type="email" name="email" /></p>
                
              </div>
              <div class="form1">
                <p>Password  <br> <input type="password" name="password" /></p>
               
                <p>Confirm Password   <br><input type="password" name="cpassword" /></p>
               
              </div>
              <div class="button">
                <p>Login If Already Created Account</p>
              <input type="submit" value="Register">
             <a href="/login"> <input type="button" value="Login" > </a>
              
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
