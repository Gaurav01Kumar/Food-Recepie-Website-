<!DOCTYPE html>
<html>

<head>
  <title>Your profile</title>
<style>
  .profile-container{
    padding: 5% 10%;
    
  }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>

  <%-include("header",{logo}) %>
<% const {firstname,lastname,gender,phone,email}=user %> 
    <div class="profile-container container d-flex">
     

      <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px;">
        <div class="heading d-flex flex-column">
           <span class="p-1 fw-normal">Hello,</span>
          <p class="p-1 fw-bold"> <%=firstname+"" +lastname %> </p>
        </div>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <a href="#" class="nav-link active" aria-current="page">
              <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"/></svg>
              Profile Inforamtion
            </a>
          </li>
         
          <li>
            <a href="#" class="nav-link link-dark">
              <svg class="bi me-2" width="16" height="16"><use xlink:href="#table"/></svg>
              Orders
            </a>
          </li>
          <li>
            <a href="#" class="nav-link link-dark">
              <svg class="bi me-2" width="16" height="16"><use xlink:href="#grid"/></svg>
              Manage Address
            </a>
          </li>
          <li>
            <a href="#" class="nav-link link-dark">
              <svg class="bi me-2" width="16" height="16"><use xlink:href="#grid"/></svg>
              Wishlist
            </a>
          </li>
          <li>
            <a href="/logout" class="nav-link link-dark">
              <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle"/></svg>
              Log out
            </a>
          </li>
        </ul>
        <hr>
       
      </div>
        <div class="container bg-light mx-3 d-flex  flex-column align-items-center p-3">
             <div class="row">
              <div class="col-9 p-3 fw-bold text-success fs-4">
                <p>Personal Inforamtion</p>
              </div>
              <div class="col-2 p-2">
                <a href="#" class="nav-link fw-bold text-danger fs-4">Edit</a>
              </div>
              </div>
             <div class="card d-flex  flex-column justify-content-center align-items-center p-3">
                   <div class="row">
                       <i class=" fa fa-user fs-1 bg-primary  text-center  p-2  my-4" style="width: 60px; border-radius:50%;"></i>

                   </div>
                   <div class="row text-center">
                     <h3>Name : <%=firstname + lastname %> </h3>
                     <p>Gender:<%=gender  %> </p>
                       <p>Email : <%=email  %> </p>
                       <p>Phone : <%=phone  %> </p>
                   </div>
                  
                   
             </div>
        </div>

    </div>
    <%-include("footer")  %> 
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>

</html>